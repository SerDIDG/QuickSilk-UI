<div class="app__module app-mod__element" data-element="Mod.ElementRadioButton" data-node="ModElementRadioButton:{}:container" data-config='{"required" : true, "name" : "element_radiobutton"}'>
    <dl data-node="field">
        <dt><label for="element_radiobutton">Radio:</label></dt>
        <dd>
            <div class="check-line">
                <input name="element_radiobutton" type="radio" value="1" data-node="inputs:[]:input">
                <label>Option 1</label>
            </div>
            <div class="check-line">
                <input name="element_radiobutton" type="radio" value="2" data-node="inputs:[]:input">
                <label>Option 2</label>
            </div>
            <div class="check-line">
                <input name="element_radiobutton" type="radio" value="3" data-node="inputs:[]:input">
                <label>Option 3</label>
            </div>
            <ul class="hint hidden" data-node="errors">
                <li>Value is required and can't be empty</li>
            </ul>
        </dd>
    </dl>
</div>